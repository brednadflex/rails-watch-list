<div class="container">
  <div>
    <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('popcorn.jpg') %>)">
      <h1>This is your <%= @list.name %> - List</h1>
    </div>
  </div>
  <div>
      <div>
        <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-flat' %>
        <%= link_to 'delete this list', list_path(@list), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this list?' } %>
        <%= link_to 'back home', lists_path, class: 'btn btn-flat' %>
      </div>
  </div>
  <div>
    <% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>">
    <%= movie.title %>
    <p class=".lower-right"><%= link_to "delete from list", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' %></p>
    </div>
    <% end %>

  </div>
</div>

